{
    "title":"Characters",
    "description":"All the Characters that are currently on the site.",
    "buttonLabel":"New Character",
    "form":{
        "title":"New Character",
        "fields":[
            {
                "label":"name",
                "required":true,
                "type":"text"
                
            },
            {
                "label":"Titles",
                "type":"text",
                "split":";",
                "placeholder":"a list of titles separated by semicolons ;"
                
            },
            {
                "label":"Type",
                "type":"creatable",
                "source":"/characters/types"
            },
            {
                "label":"description",
                "type":"text-area",
                "placeholder":"A short description/summary of your character"
                
            },
            {
                "label":"Gender",
                "type":"text"
            },
            {
                "label":"Pronouns",
                "type":"text"
            },
            {
                "label":"Born",
                "type":"text"
            },
            {
                "label":"Died",
                "type":"text"
            },
            {
                "label":"World",
                "type":"select",
                "source":"/worldbuilding/worlds"
            },
            {
                "label":"Countries",
                "type":"multi-select",
                "source":"/worldbuilding/countries"
            },
            {
                "label":"Race",
                "type":"special-select",
                "source":"/worldbuilding/races",
                "qualifier":["sudo-shape-shifter"]
            },
            {
                "label":"Abilities",
                "type":"multi-select",
                "source":"/worldbuilding/magicsystems"
                
            },
            {
                "label":"Enemies",
                "type":"multi-select",
                "source":"/characters"
                
            },
            {
                "label":"Allies",
                "type":"multi-select",
                "source":"/characters"
            },
            {
                "label":"Organizations",
                "type":"multi-select",
                "source":"/worldbuilding/organizations"
            },
            {
                "label":"Religion",
                "type":"select",
                "source":"/worldbuilding/organizations",
                "category":"type=religion"
            },
            {
                "label":"Family",
                "type":"super-select",
                "categoryLabel":"Relation",
                "source":"/characters"
            },
            {
                "label":"sections",
                "type":"section-adder"
            }
        ]
    },
    "sort":[
        {
            "label":"New to Old",
            "value":{"category":"created", "az":false}
        },
        {
            "label":"Old to New",
            "value":{"category":"created", "az":true}
        },
        {
            "label":"A-Z Name",
            "value":{"category":"name", "az":true}
        },
        {
            "label":"Z-A Name",
            "value":{"category":"name", "az":false}
        },
        {
            "label":"A-Z Author",
            "value":{"category":"Author", "az":true}
        },
        {
            "label":"Z-A Author",
            "value":{"category":"Author", "az":false}
        }
    ]

}