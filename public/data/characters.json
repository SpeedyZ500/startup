{
    "title":"Characters",
    "description":"All the Characters that are currently on the site.",
    "buttonLabel":"New Character",
    "form":{
        "title":"New Character",
        "fields":[
            {
                "label":"name",
                "required":true,
                "type":"text",
                "onCard":true,
                "inList":true,
                "filterable":false,
                "location":"head",
                "addPath":true
            },
            {
                "label":"Titles",
                "type":"text",
                "split":";",
                "placeholder":"a list of titles separated by semicolons ;",
                "onCard":true,
                "inList":false
            },
            {
                "label":"description",
                "type":"text-area",
                "placeholder":"A short description/summary of your character",
                "onCard":false,
                "inList":true,
                "filter":false,
                "location":"body"
            },
            {
                "label":"Gender",
                "type":"text",
                "onCard":true,
                "inList":false
            },
            {
                "label":"Pronouns",
                "type":"text",
                "onCard":true,
                "inList":false
            },
            {
                "label":"World",
                "type":"select",
                "source":"./data/worldbuilding/worlds",
                "onCard":true,
                "inList":true
            },
            {
                "label":"Race",
                "type":"select",
                "source":"./data/worldbuilding/races",
                "onCard":true,
                "inList":true
            },
            {
                "label":"Abilities",
                "type":"multi-select",
                "source":"./data/worldbuilding/magicsystems",
                "onCard":true,
                "inList":false
            },
            {
                "label":"Enemies",
                "type":"multi-select",
                "source":"./data/characters",
                "onCard":true,
                "inList":false
            },
            {
                "label":"Allies",
                "type":"multi-select",
                "source":"./data/characters",
                "onCard":true,
                "inList":false
            },
            {
                "label":"Family",
                "type":"super-select",
                "categoryLabel":"Relation",
                "source":"./data/characters",
                "onCard":true,
                "inList":false
            },
            {
                "label":"sections",
                "type":"section-adder"
            },
            {
                "label":"Author",
                "onCard":true,
                "inList":true,
                "hidden":false
            },
            {
                "label":"created",
                "onCard":false,
                "inList":true,
                "hidden":true,
                "filter":false
            },
            {
                "label":"modified",
                "onCard":false,
                "inList":false,
                "hidden":true,
                "filter":false
            }
        ]
    },
    "sort":[
        {
            "label":"New to Old",
            "value":{"category":"created", "az":false}
        },
        {
            "label":"Old to New",
            "value":{"category":"created", "az":true}
        },
        {
            "label":"A-Z Name",
            "value":{"category":"name", "az":true}
        },
        {
            "label":"Z-A Name",
            "value":{"category":"name", "az":false}
        },
        {
            "label":"A-Z Author",
            "value":{"category":"Author", "az":true}
        },
        {
            "label":"Z-A Author",
            "value":{"category":"Author", "az":false}
        }
    ]

}