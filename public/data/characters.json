{
    "title":"Characters",
    "description":"All the Characters that are currently on the site.",
    "buttonLabel":"New Character",
    "form":{
        "title":"New Character",
        "fields":{
            "name":{
                "label":"Name",
                "required":true,
                "type":"text"
            },
            "titles":{
                "label":"Titles",
                "type":"text-creatable",
                "placeholder":"Type each title and then press enter to save it"
            },
            "types":{
                "label":"Roles",
                "type":"creatable",
                "source":"charactertypes"
            },
            "description":{
                "label":"Description",
                "type":"text-area",
                "placeholder":"A short description/summary of your character"
            },
            "gender":{
                "label":"Gender",
                "type":"text"
            },
            "pronouns":{
                "label":"Pronouns",
                "type":"text"
            },
            "born":{
                "label":"Born",
                "type":"text"
            },
            "died":{
                "label":"Died",
                "type":"text"
            },
            "homeWorld":{
                "label":"Home World",
                "type":"select",
                "source":"worlds"
            },
            "homeCountry":{
                "label":"Home Country",
                "type":"select",
                "source":"countries",
                "filter":{
                    "key":"homeWorld",
                    "as":"worlds"
                }
            },
            "homeTown":{
                "label":"Home Town",
                "type":"select",
                "soruce":"towns",
                "filter":{
                    "key":"homeCountry",
                    "as":"id"
                }
            },
            "otherWorlds":{
                "label":"Worlds",
                "type":"multi-select",
                "source":"worlds"
            },
            "otherCountries":{
                "label":"Countries",
                "type":"multi-select",
                "source":"countries",
                "key":"otherCountries"
            },
            "race":{
                "label":"Race",
                "type":"select",
                "source":"races"
            },
            "altForms":{
                "label":"Alternate Forms",
                "source":"races",
                "qualifierKey":"race",
                "qualifier":{
                    "filter":{"types":["pseudo-shape-shifter"]}
                }
            },
            "abilities":{
                "label":"Abilities",
                "type":"multi-select",
                "source":"magicsystems"
            },
            "enemies":{
                "label":"Enemies",
                "type":"multi-select",
                "source":"characters"
            },
            "allies":{
                "label":"Allies",
                "type":"multi-select",
                "source":"characters"
            },
            "organizations":{
                "label":"Organizations",
                "type":"multi-select",
                "source":"organizations"
           },
            "religion":{
                "label":"Religion",
                "type":"select",
                "source":"organizations",
                "filter":{"types":"Religion"}
            },
            "family":{
                "label":"Family",
                "type":"super-select",
                "categoryLabel":"Relation",
                "source":"characters"
            },
            "custom":{
                "label":"Custom Fields",
                "type":"custom-adder"
            },
            "sections":{
                "label":"Sections",
                "type":"section-adder"
            }
        }
    },
    "card":{
        "head":[
            {
                "key":"name",
                "url":"url"
            }
        ],
        "body":[
            {
                "label":"Author:",
                "key":"author",
                "display":"/author/display/"
            },
            {
                "label":"Home Land",
                "set":[
                    {
                        "label":"World",
                        "key":"homeWorld",
                        "display":"/worldbuilding/worlds/display/"
                    },
                    {
                        "label":"Country",
                        "key":"homeCountry",
                        "display":"/worldbuilding/country/display/"

                    },
                    {
                        "label":"Town",
                        "key":"homeTown"
                    }
                ]
            },
            {
                "label":"Race",
                "key":"race"
            }
        ],
        "footer":[
            {
                "label":"Abilities",
                "key":"abilities"
            },
            {
                "label":"Past and Current Residences",
                "key":"countries"
            }
        ]

    },
    "filter":{
        "author":{
            "label":"Author",
            "source":"users"
        },
        "worlds":{
            "label":"World",
            "source":"worlds"
        },
        "countries":{
            "label":"Country",
            "source":"countries",
            "filter":"worlds"
        },
        "types":{
            "label":"Role",
            "source":"charactertypes"
        },
        "races":{
            "label":"Race",
            "source":"races"
        }
    },

   

    "sort":[
        {
            "label":"New to Old",
            "value":{"created":-1}
        },
        {
            "label":"Old to New",
            "value":{"created":1}
        },
        {
            "label":"A-Z Name",
            "value":{"name":1}
        },
        {
            "label":"Z-A Name",
            "value":{"name":-1}
        },
        {
            "label":"A-Z Author",
            "value":{"author":1}
        },
        {
            "label":"Z-A Author",
            "value":{"author":-1}
        }
    ],
    "cards":{
        "header":{
            "name":{
                "url":"url"
            }
        },
        "body":{
            "author":"Author",
            "gender":"Gender",
            "pronouns":"Pronouns",
            "born":"Born",
            "died":"Died",
            "homeWorld":"Home World",
            "homeCountry":"Home Country",
            "homeTown":"Home Town",
            "race":"Race",
            "religion":"Religion",
            "description":""
        }
    }

}