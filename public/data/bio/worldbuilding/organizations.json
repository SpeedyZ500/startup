{
    "card":{
        "head":{
            "name":"",
            "author":"Author"
        },
        "body":{
            "types":"Type",
            "originWorld":"Origin World",
            "otherWorlds":"Worlds Found In",
            "leaders":{
                "label":"Leaders",
                "append":{
                    "author":"authorIsLeader"
                }
            },
            "custom":{"format":"custom"}
        },
        "foot":{
            "created":{"label":"Created", "format":"time"},
            "modified":{"label":"Modified", "format":"time"}
        }
    },
    "description":"Description",
    "sections":{"format":"sections"},
    "cardSections":{
        "characters":{
            "collection":"characters",
            "label":"Members",
            "type":"getCards",
            "url":"/characters",
            "filter":{
                "organizations":"id"
            },
            "sort":{
                "name":1
            },
            "append":[
                {
                    "condition":"listUsersAsMembers",
                    "collection":"users",
                    "type":"getCards",
                    "url":"/users",
                    "sort":{
                        "displayname":1
                    }
                }
            ]    
        },
        "character":{
            "label":"Belivers",
            "collection":"characters",
            "condition":{"types":{"includes":"Religion"}},
            "type":"getCards",
            "url":"/characters",
            "filter":{
                "religion":"id"
            },
            "sort":{
                "name":1
            }
        }
    }
}