{
    "card":{
        "name":"",
        "author":"author",
        "types":"Type",
        "originWorld":"Origin World",
        "otherWorlds":"Worlds Found In",
        "leaders":{
            "label":"Leaders",
            "append":{
                "author":{"if":"authorIsLeader"}
            }
        },
        "custom":{"format":"custom"},
        "created":{"label":"Created", "format":"time"},
        "modified":{"label":"Modified", "format":"time"}
    },
    "description":"Description",
    "sections":{"format":"sections"},
    "cardSections":{
        "characters":{
            "label":"Members",
            "type":"getCards",
            "url":"/characters",
            "filter":{
                "organizations":"id"
            },
            "sort":{
                "name":1
            },
            "append":[
                {
                    "condition":{"if":"listUsersAsMembers"},
                    "category":"users",
                    "type":"getCards",
                    "url":"/users",
                    "sort":{
                        "displayname":1
                    }
                }
            ]    
        },
        "character":{
            "label":"Belivers",
            "condition":{"types":{"includes":"Religion"}},
            "type":"getCards",
            "url":"/characters",
            "filter":{
                "religion":"id"
            },
            "sort":{
                "name":1
            }
        }
    }
}